<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostlyApp.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Margin="25,25,25,25">
        <Image Source="logo.png" Margin="25,50,25,75"/>
        <Label Text="Username"/>
        <Entry x:Name="UsernameEntry" MaxLength="10" Margin="0,0,0,8"/>
        <Label Text="Password"/>
        <Entry x:Name="PasswordEntry" MaxLength="8" IsPassword="True"/>
        <Button x:Name="LoginBtn" Text="Login" Margin="0,25,0,0" Clicked="OnLoginClicked"></Button>
        <Label Text="New here?" VerticalOptions="Center"/>
        <Button x:Name="RegisterBtn" Text="Create an Account!" Margin="0,25,0,0"></Button>
    </VerticalStackLayout>
</ContentPage>