<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PostlyApp.Views"
             x:Class="PostlyApp.Pages.HomePage"
             Title="Home">

    <!-- Here we have to distinct in some sort of tab view between public and following feed -->
    <!-- For now lets just add e.g. the public feed: -->
    <Shell.TitleView>
        <FlexLayout JustifyContent="SpaceBetween" Margin="20,0,20,0">
             <Label Text="Home" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center"/>
             <Button Text="Post" VerticalOptions="Center" Clicked="Button_Clicked" />
        </FlexLayout>
    </Shell.TitleView>

    <ScrollView VerticalScrollBarVisibility="Always">
        <StackLayout>
            <views:PostlistView x:Name="publicFeed" Margin="20,20,20,20"></views:PostlistView>
            <Button x:Name="loadMorePublicBtn" IsVisible="false" HorizontalOptions="Center" Text="Load more" Clicked="OnLoadMorePublic" Margin="0,0,0,25"></Button>
        </StackLayout>
    </ScrollView>

</ContentPage>