<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostlyApp.Pages.SearchPage"
             Title="Search">
    <ScrollView>
        <StackLayout Margin="20,20,20,20">
            <SearchBar x:Name="searchBar" Placeholder = "Search Users" SearchCommand="{Binding SearchCommand}" Margin="0,0,0,20"></SearchBar>
            <StackLayout BindableLayout.ItemsSource="{Binding SearchResult}" Spacing="20">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding}" BackgroundColor="{StaticResource surface-card}" Padding="10,10,10,10" />
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>