<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostlyApp.Pages.RegisterPage"
             Title="Register">
    <VerticalStackLayout Margin="25,25,25,25">
        <Image Source="logo.png" Margin="25,50,25,75"/>
        <Label Text="Username"/>
        <Entry x:Name="Username" Margin="0,0,0,8"/>
        <Label Text="Password"/>
        <Entry x:Name="PW1" IsPassword="True" Margin="0,0,0,8"/>
        <Label Text="Repeat password"/>
        <Entry x:Name="PW2" IsPassword="True" Margin="0,0,0,8"/>
        <!--Neuer Nutzer muss in die Datenbank hinterlegt werden?-->
        <Button x:Name="Create" Text="Create" Margin="0,25,0,0" Clicked="Create_Clicked"></Button>
        <Label Text=" "/> <!--ist nur fÃ¼r die Formatierung, bitte nicht ablenken lassen-->
        <Label Text="Already have an Account?" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Button x:Name="Signin" Text="Login" Margin="0,25,0,0" Clicked="OnSigninClicked"></Button>
    </VerticalStackLayout>
</ContentPage>